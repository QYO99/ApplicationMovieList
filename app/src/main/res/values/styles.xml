<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="searchBar">
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">#9e9e9e</item>
    </style>

    <style name="WhiteTextToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="PopupToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="blackDefaultBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
