<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailMovieActivity">
    <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:theme="@style/WhiteTextToolbar"
            app:popupTheme="@style/PopupToolbarStyle" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center|left">
        <ImageButton
                android:id="@+id/btnBack"
                android:background="@drawable/icon_action_back"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Detail Movie"
                android:textColor="@color/white"
                android:textSize="10pt"
                android:textStyle="bold"/>
    </LinearLayout>
    <FrameLayout
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:id="@+id/setBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="top"
                android:src="@drawable/background"
                android:scaleType="centerCrop"/>
        <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="top"
                android:alpha="0.8"
                android:background="@drawable/style_background"
                android:scaleType="centerCrop"/>
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginBottom="20dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:orientation="vertical">
                    <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*">
                        <TableRow android:gravity="center">
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center">
                                <LinearLayout
                                        android:paddingTop="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center">
                                    <FrameLayout android:layout_width="wrap_content"
                                                 android:layout_height="wrap_content">
                                        <ImageView
                                                android:id="@+id/setImage"
                                                android:padding="5dp"
                                                android:layout_span="2"
                                                android:scaleType="centerCrop"
                                                android:layout_width="180dp"
                                                android:layout_height="280dp"
                                                android:background="@drawable/style_layout1"
                                                android:src="@drawable/icon_movie"/>
                                        <FrameLayout
                                                android:layout_width="35dp"
                                                android:layout_height="35dp"
                                                android:layout_gravity="bottom|right"
                                                android:layout_marginBottom="5dp"
                                                android:layout_marginRight="5dp"
                                                android:background="@drawable/round_corner2">
                                        </FrameLayout>
                                        <com.like.LikeButton
                                                app:icon_type="heart"
                                                android:layout_gravity="bottom|right"
                                                app:icon_size="25dp"
                                                android:layout_marginBottom="-16dp"
                                                android:layout_marginRight="-16dp"
                                                android:id="@+id/favoriteButton"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"/>
                                    </FrameLayout>

                                    <TextView
                                            android:id="@+id/setTitle"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="5dp"
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="30dp"
                                            android:text="Movie Title"
                                            android:textStyle="bold"
                                            android:textSize="7pt"
                                            android:textColor="@color/white"/>
                                </LinearLayout>

                            </LinearLayout>
                        </TableRow>
                        <TableRow>
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/style_layout1"
                                    android:orientation="vertical"
                                    android:padding="2dp">
                                <TextView
                                        android:paddingTop="3dp"
                                        android:paddingBottom="3dp"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="User Vote"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="5pt"/>
                                <FrameLayout
                                        android:layout_marginLeft="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@drawable/style_layout3"/>
                                <TextView
                                        android:id="@+id/setVote"
                                        android:padding="7dp"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:text="9.5"
                                        android:textStyle="bold"
                                        android:textSize="7pt"
                                        android:textColor="@color/white"/>
                            </LinearLayout>
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/style_layout1"
                                    android:orientation="vertical"
                                    android:padding="2dp">
                                <TextView
                                        android:paddingTop="3dp"
                                        android:paddingBottom="3dp"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="Release Date"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textSize="5pt"/>
                                <FrameLayout
                                        android:layout_marginLeft="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@drawable/style_layout3"/>
                                <TextView
                                        android:id="@+id/setDate"
                                        android:padding="7dp"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:text="2001"
                                        android:textStyle="bold"
                                        android:textSize="7pt"
                                        android:textColor="@color/white"/>
                            </LinearLayout>
                        </TableRow>
                        <TableRow>
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/style_layout1"
                                    android:orientation="vertical"
                                    android:padding="2dp">
                                <TextView
                                        android:paddingTop="3dp"
                                        android:paddingBottom="3dp"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:text="Popularity"
                                        android:textStyle="bold"
                                        android:textColor="@color/white"
                                        android:textSize="5pt"/>
                                <FrameLayout
                                        android:layout_marginLeft="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@drawable/style_layout3"/>
                                <TextView
                                        android:id="@+id/setPopularity"
                                        android:padding="7dp"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:text="7654"
                                        android:textStyle="bold"
                                        android:textSize="7pt"
                                        android:textColor="@color/white"/>
                            </LinearLayout><LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:background="@drawable/style_layout1"
                                android:orientation="vertical"
                                android:padding="2dp">
                            <TextView
                                    android:paddingTop="3dp"
                                    android:paddingBottom="3dp"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="Original Language"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textSize="5pt"/>
                            <FrameLayout
                                    android:layout_marginLeft="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@drawable/style_layout3"/>
                            <TextView
                                    android:id="@+id/setLanguage"
                                    android:padding="7dp"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:text="en"
                                    android:textStyle="bold"
                                    android:textSize="7pt"
                                    android:textColor="@color/white"/>
                        </LinearLayout>
                        </TableRow>
                        <TableRow>
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/style_layout1"
                                    android:orientation="vertical"
                                    android:padding="2dp">
                                <TableLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:stretchColumns="*">
                                    <TableRow android:gravity="center">
                                        <TextView
                                                android:paddingTop="3dp"
                                                android:paddingBottom="3dp"
                                                android:gravity="center"
                                                android:layout_width="0dp"
                                                android:layout_weight="1"
                                                android:layout_height="wrap_content"
                                                android:text="Overview"
                                                android:textColor="@color/white"
                                                android:textStyle="bold"
                                                android:textSize="5pt"/>
                                    </TableRow>
                                    <TableRow>
                                        <FrameLayout
                                                android:layout_marginLeft="5dp"
                                                android:layout_width="match_parent"
                                                android:layout_height="1dp"
                                                android:background="@drawable/style_layout3"/>
                                    </TableRow>
                                    <TableRow>
                                        <TextView
                                                android:id="@+id/setOverview"
                                                android:padding="7dp"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:minHeight="100dp"
                                                android:text="On the run in the year 1987, Bumblebee finds refuge in a junkyard in a small Californian beach town. Charlie, on the cusp of turning 18 and trying to find her place in the world, discovers Bumblebee, battle-scarred and broken. When Charlie revives him, she quickly learns this is no ordinary yellow VW bug"
                                                android:scrollbars="vertical"
                                                android:textSize="5pt"
                                                android:textColor="@color/white"/>
                                    </TableRow>
                                </TableLayout>
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

</RelativeLayout>